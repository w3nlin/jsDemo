    <script>
        window.onload=function(){
            getTimeFormat();
            setInterval(getTime,1000);
            function getTimeFormat(){
                var date=new Date();
                var hours=date.getHours();
                var minutes=date.getMinutes()
                var seconds=date.getSeconds();
                if(hours>=12){
                    hours=hours-12;
                }
                d1.style.transform="rotateZ("+hours*30+"deg)";
                d2.style.transform="rotateZ("+minutes*6+"deg)";
                d3.style.transform="rotateZ("+seconds*6+"deg)";
                console.log(seconds);
            }
            function getTime(){
                var date=new Date();
                var hours=date.getHours();
                var minutes=date.getMinutes()
                var seconds=date.getSeconds();
                if(hours>=12){
                    hours=hours-12;
                }
                d1.style.transition="1s";
                d2.style.transition="1s";
                d3.style.transition="1s";
                d1.style.transform="rotateZ("+hours*30+"deg)";
                d2.style.transform="rotateZ("+minutes*6+"deg)";
                d3.style.transform="rotateZ("+seconds*6+"deg)";
                console.log(seconds);
            }
        }
    </script>
